<h1>All Articles</h1>
<div class="container mt-3">
  <div class="row">

       <% @article.each do | article |  %>
         <div class="card article-posts">
           <div class="card-header">
             <h4 class="card-title">
               <h3><a href="/articles/<%=article.id %>"><%= article.title %></a></h3>
             </h4>
           </div>
           <div class="card-body">
             <p class="card-text">
               <%= article.description %>
             </p>
           </div>
           <div class="card-footer d-flex justify-content-between align-items-center">
             <span>Posted: 2 min Ago</span>
             <div class="article_actions">
<!--               <a href="/articles/<%#= article.id %>">View</a>-->
<!--               <a href="/articles/new">New</a>-->
<!--               <a href="/articles" class="text-dark">Edit</a>-->
<!--               <a href="#" class="text-danger">Delete</a>-->
               <%= link_to 'Edit', edit_article_path(article), class: 'text-dark' %>
               <%= link_to 'View',article_path(article), class: 'text-grey' %>
               <%= link_to "Delete", article_path(article), method: :delete, data: { turbo_method: :delete, turbo_confirm:
                 'Are you sure?' }, class: 'text-danger' %>
             </div>
           </div>
         </div>
       <% end %>
     </div>
  </div>
</div>