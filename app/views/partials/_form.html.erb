<%= form_for @article do |form| %>
  <div class="form-group">
    <%= form.text_field :title, class: "form-control", placeholder: "What's title.." %>
  </div>
  <div class="form-group">
    <%= form.text_area :description, class: "form-control", placeholder: "Story?" %>
  </div>
  <div class="form-group">
    <%= form.submit class: 'btn btn-lg btn-primary' %>
  </div>
<%end %>